<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TÃ­tulo Bem vindo"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/imgEmpresaMain"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_business"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imgLogout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="75dp"
            android:layout_marginEnd="42dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/ic_logout" />

        <TextView
            android:id="@+id/txtLogout"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/imgLogout"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imgLogout"
            android:layout_marginBottom="56dp"
            android:text="Log out"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/imgEditPerfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_perfil"
            android:layout_above="@+id/txtPerfil"
            android:layout_alignLeft="@+id/imgLogout"
            android:layout_alignStart="@+id/imgLogout" />

        <TextView
            android:id="@+id/txtPerfil"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginBottom="77dp"
            android:text="Editar Perfil"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_above="@+id/imgLogout"
            android:layout_alignLeft="@+id/imgEditPerfil"
            android:layout_alignStart="@+id/imgEditPerfil" />

    </RelativeLayout>




</LinearLayout>
