<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip"
    android:focusable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="468dp"
        android:layout_weight="0.56">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editVagaTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Título da Vaga"
                android:inputType="textCapSentences" />

            <EditText
                android:id="@+id/editVagaCidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Cidade"
                android:inputType="textCapSentences" />

            <EditText
                android:id="@+id/editVagaEmailContato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="E-mail do Contato"
                android:inputType="textEmailAddress" />

            <Spinner
                android:id="@+id/spn_ramo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
            </Spinner>

            <EditText
                android:id="@+id/editVagaDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.56"
                android:ems="10"
                android:hint="Descrição da vaga"
                android:inputType="textMultiLine"
                android:lines="13"/>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnVagaCadastrar"
            style="@style/BtnVermelho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar Vaga" />
    </LinearLayout>

</LinearLayout>
