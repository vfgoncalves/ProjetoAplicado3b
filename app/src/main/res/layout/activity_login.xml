<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:focusable="true"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ic_logo"/>

    <EditText
        android:id="@+id/editLoginEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/branco"
        android:textColor="@color/branco"/>

    <EditText
        android:id="@+id/editLoginSenha"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColorHint="@color/branco"
        android:textColor="@color/branco"/>

    <Button
        android:id="@+id/btnLogin"
        style="@style/BtnBranco"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Login" />

 <!--<Switch
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="Manter conectado"
     android:textColor="@color/branco"
     android:textAlignment="viewEnd"
     android:id="@+id/manterConectado"/>-->

    <TextView android:id="@+id/lnkCadastrar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:layout_marginBottom="13dip"
        android:text="NÃ£o possui cadastro? Clique aqui"
        android:gravity="center"
        android:textSize="20dip"
        android:textColor="@color/branco"/>

    <TextView android:id="@+id/textOu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dip"
        android:text="Ou"
        android:gravity="center"
        android:textSize="15dip"
        android:textColor="@color/branco"/>

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_linkedin"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_googleplus"
            android:id="@+id/imgLoginGoogle"/>
    </LinearLayout>

</LinearLayout>