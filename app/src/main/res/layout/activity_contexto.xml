<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="projetoaplicado.vgoncalves.com.projetoaplicado.ContextoActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quem você é?"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/imgCandidato"
            android:layout_width="174dp"
            android:layout_height="174dp"
            android:background="@drawable/ic_account_circle"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Candidato"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/imgEmpresa"
            android:layout_width="174dp"
            android:layout_height="174dp"
            android:background="@drawable/ic_business"
            android:elevation="2dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empresa"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="30dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
